<div class="item">
                    <div>Imagem da Receita</div>
                    <div>
                        <input 
                        type="url" 
                        name="image" 
                        value="{{recipe.image}}"
                        >
                    </div>
                </div>
                <div class="item">
                    <div>Titulo</div>
                    <div>
                        <input 
                        type="text" 
                        name="title" 
                        value="{{recipe.title}}"
                        >
                    </div>
                </div>
                <div class="item">
                    <div>Autor</div>
                    <div>
                        <input 
                        type="text" 
                        name="author" 
                        value="{{recipe.author}}"
                        >
                    </div>
                </div>
                <div class="item">
                    <div>Ingredientes</div>
                        <div id="ingredients">
                            {% for recipes in recipe.ingredients %}
                            
                            <div class="ingredient">
                                <input 
                                type="text" 
                                name="ingredients[]" 
                                placeholder=""
                                value="{{recipes}}"
                                >
                            </div>

                            {% endfor %}
                        </div>
                    <div>
                        <button type="button" class="add-ingredient">Adicionar Novo Ingrediente</button>
                    </div>
                </div>
                 <div class="item">
                    <div>Modo de preparo</div>
                        <div id="preparation">
                             {% for recipes in recipe.preparation %}
                                <div class="preparation">
                                    <input 
                                    type="text" 
                                    name="preparation[]" 
                                    placeholder=""
                                    value="{{recipes}}"
                                    >
                                </div>
                            {% endfor %}    
                        </div>
                    <div>
                        <button type="button" class="add-preparation">Adicionar novo passo</button>
                    </div>
                </div>
                <div class="item">
                    <div>Informações adicionais</div>
                    <div>
                    <textarea name="information">{{recipe.information}}</textarea>   
                    </div> 
                </div>
            </div>