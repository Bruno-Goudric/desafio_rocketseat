{% extends "./layout.njk" %}

{% block content %}
    <section>
        <div class="title">
            <h1>Genenciar receitas</h1>
        </div>
    </section>

    <section>
        <div class="cards">
          {% for item in items %}
            <div class="card">
              <div class="card__image-container">
                <img src="{{item.image}}" alt="">
              </div>
            </div>
            <div class="card">
              <div class="card__content">
                  <h1 class="card-title">{{item.title}}</h1>
                </div>
                <div class="card__info">
                  <p class="author">por {{item.author}}</p>
                </div>
                <div class="card_link">
                  <a href="/admin/recipes/{{item.id}}">Visualizar</a>
                </div>
               </div> 
          {% endfor %}
        </div>  
   </section>
{% endblock content %}