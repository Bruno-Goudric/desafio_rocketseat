{% extends "./layout.njk" %}

{% block content %}
    <section>
          
            <div class="form_action">
                <h1>Editando receitas</h1>
            <form id="form_delete" action="/admin/recipes?_method=DELETE" method="post">
                <div >
                    <input type="hidden" name="id" value="{{recipe.id}}">
                    <button class="btn_delete" type="submit">Deletar</button>
                </div>
            </form>      
            <form action="/admin/recipes?_method=PUT" method="post">          
                <div>
                    <input type="hidden" name="id" value="{{recipe.id}}">
                    <button class="btn_save" type="submit">Salvar receita</button>
                </div>
            </div>
                  {% include './fields.njk' %}  
            </form>
        
              
    </section>

{% endblock content %}